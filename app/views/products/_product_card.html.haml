.row.mb-3
  .col-md-10
    .card
      .card-body
        %h3.card-title=link_to product.name, product
        .card-text
          %p= "Stage: #{product.stage}"
          %p= product.description
          %p= product.product_type
          %p= product.url
          %span 3
          %i.fa.fa-comment-alt
  .col-md-2
    .card.text-center.vote-card
      .my-auto 
        %i.fa.fa-chevron-up
        %h6 6

