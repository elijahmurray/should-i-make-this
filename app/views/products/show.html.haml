.row.mb-3.mt-5
  .col-md-10
    .card
      .card-body
        %h3.card-title= @product.name
        .card-text
          %p= "Followers: #{@product.followers.count}"
          %p= "Stage: #{@product.stage}"
          %p= @product.description
          %p= @product.product_type
          %p= @product.url
          %p
            %b Type:
            = @product.product_type
          %p
            %b Url:
            = @product.url

          - if current_user_is_owner?(@product)
            = link_to 'Edit', edit_product_path(@product)
            \|
            = link_to 'Delete', product_path(@product), method: :delete, data: {confirm: 'Are you sure?'}, class: 'text-danger'
      .card-footer.py-4
        = simple_form_for [@product, @product.comments.build], html: { class: 'form-inline'} do |f|
          = f.input :body, as: :string, label: false, input_html: {class: 'mr-3'}, placeholder: "What do you think about this idea?"
          = f.submit 'Add Comment', class: 'btn btn-primary'
        - if !@comments.empty?
          %hr
        - @comments.each do |comment|
          = render partial: 'comment', locals: {comment: comment}
  .col-md-2
    .card.text-center.vote-card
      .my-auto 
        = render partial: 'vote_button', locals: {vote_object: @product}
    .text-center.mt-3
      - if !current_user.following?(@product)
        =link_to "Follow", follow_product_path(@product), method: :put, class: "btn btn-danger btn-sm"
      - else
        =link_to "Unfollow", unfollow_product_path(@product), method: :put, class: "btn btn-outline-danger btn-sm"
